<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hibernate.pojo.TEST_BLOB_CONTENT" table="TEST_BLOB_CONTENT">
        <id name="FILE_NAME" type="string">
            <column name="FILE_NAME" precision="80" scale="0" />
            <generator class="assigned" />
        </id>
        <property name="BLOB_CONTENT" type="blob">
            <column name="BLOB_CONTENT" not-null="false" />
        </property>
    </class>
</hibernate-mapping>